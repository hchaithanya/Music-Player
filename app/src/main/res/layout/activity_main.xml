<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.rockstar.mplayer.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:layout_width="323dp"
        android:layout_height="248dp"
        app:srcCompat="@drawable/albumart"
        android:id="@+id/albumart"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="112dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.66" />

    <ImageView
        android:layout_width="317dp"
        android:layout_height="82dp"
        app:srcCompat="@drawable/nowplaying"
        android:id="@+id/nowplaying"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songstart"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/albumart"
        android:layout_marginTop="40dp" />

    <SeekBar
        android:layout_width="228dp"
        android:layout_height="25dp"
        android:id="@+id/seekBar"
        app:layout_constraintLeft_toLeftOf="@+id/songstart"
        app:layout_constraintTop_toTopOf="@+id/nowplaying"
        android:layout_marginTop="360dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.53" />

    <ImageButton
        android:layout_width="115dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/play"
        android:id="@+id/play"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="144dp"
        android:layout_marginEnd="144dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintVertical_bias="0.94" />

    <ImageButton
        android:layout_width="93dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/forward"
        android:id="@+id/forward"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        app:layout_constraintLeft_toRightOf="@+id/play"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/albumart"
        android:layout_marginTop="296dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.98" />

</android.support.constraint.ConstraintLayout>
